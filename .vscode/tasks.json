{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Projects/Unit Info/Unit Info.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Projects/Unit Info/Unit Info.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Projects/Unit Info/Unit Info.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Git diff stats",
            "type": "shell",
            "command": "git diff --stat",
            "problemMatcher": []
        },
        {
            "label": "Generate Test Coverage Report",
            "command": "reportgenerator",
            "args": [
                "-reports:\"${workspaceFolder}/Projects/MQHandbookLib_Tests/Coverage/lcov.info\"",
                "-targetdir:\"${workspaceFolder}/Projects/MQHandbookLib_Tests/Coverage/report/html\"",
                "-reporttypes:Html"
            ],
            "problemMatcher": []
        },
        {
            "label": "Open Coverage Report",
            "type": "shell",
            "linux":{
                "command": "google-chrome",
            },
            "windows":{
                "command": "chrome.exe",
            },
            "args": [
                "${workspaceFolder}/Projects/Projects/MQHandbookLib/Tests/Coverage/report/html/index.html"
            ],
            "dependsOn": [
                "Generate Test Coverage Report"
            ],
            "problemMatcher": []
        }
    ]
}